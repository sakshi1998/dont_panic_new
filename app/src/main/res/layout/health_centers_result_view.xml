<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:contentDescription="@string/Details"
    android:padding="12dp">


    <FrameLayout
        android:id="@+id/content_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#84FFFF"
        android:padding="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:elevation="10dp">

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@mipmap/hospital" />

            <TextView
                android:id="@+id/placeNameTextView"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="93dp"
                android:layout_marginTop="13dp"
                android:text="Place Name"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/openingTime"
                android:layout_alignParentStart="true"
                android:layout_marginStart="132dp"
                android:text="3.5"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/openingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/imageView4"
                android:layout_marginBottom="13dp"
                android:text="Open now: "
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <Button
                android:id="@+id/update1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:background="#84FFFF"
                android:onClick="Update"
                android:text="UPDATE">

            </Button>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/placeNameTextView"
                android:layout_alignTop="@+id/update1"
                app:srcCompat="@android:drawable/btn_star_big_on" />

        </RelativeLayout>


    </FrameLayout>
</android.support.v7.widget.CardView>